{
  "name": "groupchat",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch src/server.ts",
    "client": "bun run src/client.ts",
    "agent": "bun run src/agent.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.1.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "hono": "^4.8.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  }
}
